{
  "name": "notion-cookbook",
  "version": "1.0.0",
  "description": "A collection of guides, examples, and resources for building with Notion's developer platform",
  "private": true,
  "scripts": {
    "examples:install": "./scripts/install-examples.sh",
    "examples:typecheck": "./scripts/typecheck-examples.sh",
    "lint:markdown": "markdownlint \"**/*.md\" --ignore node_modules --ignore \"**/node_modules/**\" --config .markdownlint.jsonc",
    "format": "prettier --write \"**/*.{md,json,yml,yaml}\"",
    "format:check": "prettier --check \"**/*.{md,json,yml,yaml}\"",
    "verify": "npm run examples:typecheck && npm run lint:markdown && npm run format:check",
    "verify:all": "npm run examples:install && npm run verify",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{md,json,yml,yaml}": [
      "prettier --write",
      "markdownlint --config .markdownlint.jsonc --fix"
    ],
    "*.{ts,js}": [
      "prettier --write"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/makenotion/notion-cookbook.git"
  },
  "keywords": [
    "notion",
    "notion-api",
    "examples",
    "guides",
    "documentation"
  ],
  "author": "Notion",
  "license": "MIT",
  "devDependencies": {
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "markdownlint-cli": "^0.39.0",
    "prettier": "^3.2.5"
  },
  "dependencies": {
    "@notionhq/client": "^5.6.0",
    "dotenv": "^17.2.3"
  }
}
